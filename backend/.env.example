# Solana Configuration
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WALLET_PRIVATE_KEY=
SOLANA_NETWORK=mainnet-beta

# Helius RPC (Optional, recommended for better performance)
HELIUS_RPC_URL=

# Jupiter API
JUPITER_API_URL=https://quote-api.jup.ag/v6

# LLM Configuration
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1  # Custom base URL for OpenAI-compatible APIs (e.g.,国产大模型)
LLM_PROVIDER=anthropic  # anthropic or openai
LLM_MODEL=claude-3-5-sonnet-20241022

# Examples for OpenAI-compatible APIs:
# For DeepSeek (国产大模型):
# OPENAI_API_KEY=your_deepseek_key
# OPENAI_BASE_URL=https://api.deepseek.com/v1
# LLM_PROVIDER=openai
# LLM_MODEL=deepseek-chat

# For Moonshot (Kimi, 国产大模型):
# OPENAI_API_KEY=your_moonshot_key
# OPENAI_BASE_URL=https://api.moonshot.cn/v1
# LLM_PROVIDER=openai
# LLM_MODEL=moonshot-v1-8k

# For Qwen (通义千问, 国产大模型):
# OPENAI_API_KEY=your_qwen_key
# OPENAI_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
# LLM_PROVIDER=openai
# LLM_MODEL=qwen-turbo

# For Zhipu (智谱AI, 国产大模型):
# OPENAI_API_KEY=your_zhipu_key
# OPENAI_BASE_URL=https://open.bigmodel.cn/api/paas/v4
# LLM_PROVIDER=openai
# LLM_MODEL=glm-4-flash

# Database
DATABASE_URL=sqlite:///./data/trading.db
SUPABASE_URL=
SUPABASE_KEY=

# Redis (Optional, for caching)
REDIS_URL=redis://localhost:6379

# Trading Configuration
MAX_POSITION_SIZE=0.05  # 5% of portfolio per trade
MAX_DAILY_LOSS=0.02  # 2% daily loss limit
STOP_LOSS_PERCENTAGE=0.10  # 10% stop loss
TRADE_SLIPPAGE=0.01  # 1% slippage tolerance

# Risk Management
MAX_OPEN_POSITIONS=3
MIN_TRADE_AMOUNT_SOL=0.01
RESERVE_BALANCE_SOL=0.01  # Keep 0.01 SOL for gas

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/trading.log

# Notifications (Optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
DISCORD_WEBHOOK_URL=

# Environment
ENVIRONMENT=development  # development, paper_trading, production
